---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  {
    projects.map(({ name, summary, image, linkPreview, linkSource }, index) => {
      const topDesktop = 98 + index * 40;
      const zIndex = index + 1;
      const topMobile = 88;
      const stackStep = 12;
      const stackMaxSteps = 4;
      const stackOffset = Math.min(index, stackMaxSteps) * stackStep;
      return (
        <div
          style={`--card-top-mobile: ${topMobile + stackOffset}px; --card-top-desktop: ${topDesktop}px; z-index: ${zIndex};`}
          class="sticky top-[var(--card-top-mobile)] mb-12 rounded-2xl border border-neutral/20 bg-black sm:top-[var(--card-top-desktop)]"
        >
          <div
            class="bg-difu relative z-[1] flex flex-col overflow-hidden rounded-2xl bg-[#1c232d] before:absolute before:inset-0 before:z-[-1] before:rounded-2xl before:bg-[url(/raja.png)] before:bg-[length:128px] before:bg-repeat before:opacity-[5%] before:content-[''] sm:grid sm:min-h-0 sm:grid-cols-2 sm:grid-rows-1 sm:bg-[#1c232d]/85 md:h-96"
          >
            <div class="flex shrink-0 flex-col px-6 pb-6 pt-10 sm:justify-between sm:py-12">
              <div>
                <h3 class="mb-5 font-serif text-3xl font-medium text-primary">
                  {name}
                </h3>
                <p class="text-base text-neutral">{summary}</p>
              </div>
              <div class="flex gap-5 pt-8 text-white">
                {
                  linkSource && (
                    <a
                      href={linkSource}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 rounded-full bg-primary px-5 py-3 text-xs leading-5 font-medium text-[#fff] transition-colors hover:bg-primary/90 active:scale-95"
                    >
                      <span class="sm:hidden">
                        <img src="/external.svg" alt="" class="h-4 w-4 invert" />
                      </span>
                      Source
                    </a>
                  )
                }
                {
                  linkPreview && (
                    <a
                      href={linkPreview}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 rounded-full bg-primary px-5 py-3 text-xs leading-5 font-medium text-[#fff] transition-colors hover:bg-primary/90 active:scale-95"
                    >
                      <span class="sm:hidden">
                        <img src="/external.svg" alt="" class="h-4 w-4 invert" />
                      </span>
                      Preview
                    </a>
                  )
                }
              </div>
            </div>
            <div class="flex h-[200px] items-end justify-end overflow-hidden sm:h-auto">
              <Image
                class="h-full w-[95%] rounded-ss-xl rounded-ee-2xl object-cover object-left-top sm:h-[85%] sm:w-full sm:object-none"
                src={image}
                alt={name}
                width="736"
                height="483"
              />
            </div>
          </div>
        </div>
      );
    })
  }
</Section>