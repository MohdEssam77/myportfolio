---
import Menu from "@icons/Menu.astro";
import { Image } from "astro:assets";
import type { HeaderProps } from "@types";

type Props = HeaderProps;

const { siteLogo, navLinks } = Astro.props;
---

<header
  class="sticky top-0 z-50 mx-auto flex max-w-5xl animate-slide-in justify-between bg-black px-5 py-6"
>
  <a href="/" aria-label="Home link">
    <Image
      class="rounded-full"
      src={siteLogo}
      width="45"
      height="45"
      alt="website logo"
    />
  </a>

  <button
    type="button"
    id="menu-button"
    class="px-1.5 text-neutral sm:hidden"
    aria-expanded="false"
    aria-controls="main-menu"
  >
    <Menu />
  </button>

  <nav
    class="absolute top-20 right-5 hidden rounded-xl border border-neutral/40 bg-black px-4 py-5 text-neutral sm:static sm:block sm:border-0 sm:bg-transparent sm:p-0"
    id="main-menu"
  >
    <ul class="gap-2 sm:flex">
      {
        navLinks.map((link) => (
          <li class="relative">
            <a
              class={`nav-item relative block p-2 text-sm font-medium transition-all duration-500 after:absolute after:bottom-0 after:left-2/4 after:h-2 after:w-1 after:-translate-x-2/4 after:text-primary after:opacity-0 after:content-['•'] hover:text-white`}
              href={link.href}
            >
              {link.text}
            </a>
          </li>
        ))
      }
      <li class="relative">
        <a
          class="inline-flex items-center gap-2 rounded-full border border-primary bg-transparent px-4 py-2 text-sm font-medium text-[#fff] transition-colors hover:bg-primary/10"
          href="/Halboup_Mohammed.pdf"
          download="Mohammed_Halboup_Resume.pdf"
        >
          Resume
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  // Toggle mobile menu
  const button = document.querySelector("#menu-button");
  const menu = document.querySelector("#main-menu");
  const navItems = document.querySelectorAll("#main-menu > ul > li > a");

  const toggleMenu = () => {
    menu?.classList.toggle("hidden");
    const isHidden = menu?.classList.contains("hidden");
    button?.setAttribute("aria-expanded", `${!isHidden}`);
  };

  button?.addEventListener("click", toggleMenu);
  navItems.forEach((item) => {
    item?.addEventListener("click", toggleMenu);
  });

  // Update navigation based on scroll position
  const updateActiveNav = (sectionId: string) => {
    navItems.forEach((item) => {
      const href = item.getAttribute("href");
      if (href === `#${sectionId}`) {
        item.classList.add("text-white", "md:after:opacity-100");
      } else {
        item.classList.remove("text-white", "md:after:opacity-100");
      }
    });
  };

  // Active section = last section whose top is at or above a line near the top of the viewport.
  // This works reliably with sticky layouts (e.g. Hackathons) where intersection ratio is misleading.
  const getActiveSection = () => {
    const sections = document.querySelectorAll("section");
    const triggerOffset = 120; // px from top of viewport
    let activeSection = "";
    
    for (const section of sections) {
      const rect = section.getBoundingClientRect();
      if (rect.top <= triggerOffset) {
        activeSection = section.id;
      } else {
        break;
      }
    }
    // At top of page, no section has crossed the line yet — highlight first section
    if (!activeSection && sections.length) {
      activeSection = sections[0].id;
    }
    return activeSection;
  };

  const updateNavFromScroll = () => {
    const activeSection = getActiveSection();
    if (activeSection) {
      updateActiveNav(activeSection);
    }
  };

  updateNavFromScroll();
  window.addEventListener("scroll", updateNavFromScroll, { passive: true });
  window.addEventListener("resize", updateNavFromScroll);

  // Also handle hash changes (when clicking nav links)
  const handleHashChange = () => {
    const hash = window.location.hash.slice(1); // Remove the #
    if (hash) {
      updateActiveNav(hash);
    }
  };

  window.addEventListener("hashchange", handleHashChange);
  
  // Check initial hash on page load
  if (window.location.hash) {
    setTimeout(handleHashChange, 100);
  }

</script>

<style>
  header {
    animation-timeline: scroll();
    animation-range: 0 650px;
  }
</style>
